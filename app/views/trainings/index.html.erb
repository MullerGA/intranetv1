<div class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left">
                <div class="text-center">
                    <a href="index.html" class="logo"><i class="mdi mdi-radar"></i> <span>Sextant</span></a>
                </div>
            </div>

            <!-- Button mobile view to collapse sidebar menu -->
            <nav class="navbar-custom">
              <ul class="list-inline float-right mb-0">
                    <li class="list-inline-item dropdown notification-list">
                        <a class="nav-link dropdown-toggle waves-effect waves-light nav-user" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <%= fa_icon "user" %>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right profile-dropdown " aria-labelledby="Preview">
                            <!-- item-->
                            <a href="javascript:void(0);" class="dropdown-item notify-item">
                                <%= fa_icon "sign-out" %> <span>Déconnexion</span>
                            </a>

                        </div>
                    </li>

                </ul>


                <ul class="list-inline menu-left mb-0">
                    <li class="float-left">
                        <button class="button-menu-mobile open-left waves-light waves-effect">
                            <%= fa_icon "bars" %>
                        </button>
                    </li>
                </ul>



            </nav>

        </div>
        <!-- Top Bar End -->






        <!-- ========== Left Sidebar Start ========== -->

        <div class="left side-menu">
            <div class="sidebar-inner">
                <!--- Divider -->
                <div id="sidebar-menu">
                    <ul>
                       <li class="menu-title">Main</li>
                          <li>
                                <a href="index.html" class="waves-effect waves-primary"><%= fa_icon "graduation-cap" %><span>Home </span></a>
                          </li>

                        <li class="has_sub">
                            <a href="javascript:void(0);" class="waves-effect waves-primary"><%= fa_icon "graduation-cap" %><span>Formation</span>
                                <span class="menu-arrow"></span></a>
                            <ul class="list-unstyled">


                                <% @trainings.each do |product| %>
                                <li><a href=<%= training_path(product)%> ><%= product.training.name %></a></li>

                                <% end %>

                            </ul>

                      </li>
                    </ul>


                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- Left Sidebar End -->

<div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container-fluid">

                        <!-- Page-Title -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="page-title-box">
                                    <h4 class="page-title">Bonjour <%=current_user.email %></h4>
                                    <ol class="breadcrumb float-right">
                                        <li class="breadcrumb-item"><a href="#">Minton</a></li>
                                        <li class="breadcrumb-item active">Dashboard</li>
                                    </ol>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row">




                    <!-- Création des cards en fonction du profil -->
                          <% @trainings.each do |product| %>
                            <div class="col-sm-4 col-lg-3 col-xs-12">

                                <!-- Simple card -->
                                <div class="card m-b-20">
                                    <img class="card-img-top img-fluid" src="https://loremflickr.com/320/240/computer" alt="Card image cap">
                                    <div class="card-body">
                                        <h5 class="card-title">Formation <%= product.training.name %></h5>
                                        <p class="card-text"> Super texte pour présenter la formation <%= product.training.name %></p>
                                        <a href=<%= training_path(product) %> class="btn btn-primary">Accès aux cours</a>
                                    </div>
                                </div>

                            </div><!-- end col -->
                         <% end %>




                    </div>
                    <!-- end container -->
                </div>
                <!-- end content -->

                <footer class="footer text-right">
                    2018 © Sextant.
                </footer>

            </div>
            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->




    </div>
    <!-- END wrapper -->
  </div>
